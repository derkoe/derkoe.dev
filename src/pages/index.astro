---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import derkoeLaughing from "../assets/derkoe-laughing.jpg";
import { Image } from "astro:assets";

const posts = await getCollection("blog");
posts.sort((a, b) => b.data.pubDate?.valueOf() - a.data.pubDate?.valueOf());
---

<Layout>
  <div class="hero">
    <div class="hero-text">
      <h1>Hi, I'm Kö!</h1>
      <p>
        My name is Christian Köberl and I am a software engineer @ Porsche
        Informatik in Salzburg, Austria.
      </p>
    </div>
    <div class="hero-content">
      <Image
        src={derkoeLaughing}
        alt="Christian Köberl laughing"
        class="profile-image"
        width={400}
        height={600}
      />
      <div class="nav-cards">
        <a href="/blog" class="nav-card">
          <h2>Blog</h2>
          <p>
            Read my thoughts and experiences about software development, cloud
            computing, and more.
          </p>
          <span class="card-arrow">→</span>
        </a>
        <a href="/talks" class="nav-card">
          <h2>Talks</h2>
          <p>
            Watch my conference talks and presentations about various tech
            topics.
          </p>
          <span class="card-arrow">→</span>
        </a>
      </div>
    </div>
  </div>

  <section class="blog-preview">
    <h2>Latest Blog Posts</h2>
    <div class="post-grid">
      {
        posts.map(post => (
          <article class="post-card">
            <h3>{post.data.title}</h3>
            <p>{post.data.summary}</p>
            <a href={`/blog/${post.slug}`} class="read-more">
              Read more →
            </a>
          </article>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    margin-bottom: 3rem;
  }

  .hero-text {
    text-align: center;
    padding: 2rem;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .hero-content {
      flex-direction: row-reverse;
      gap: 2rem;
      align-items: flex-start;
    }

    .hero-text {
      text-align: left;
    }

    .profile-image {
      flex: 0 0 400px;
    }
  }

  .profile-image {
    border-radius: 5%;
    object-fit: cover;
    margin: 0 auto 2rem;
    max-width: 100%; /* Change to ensure image does not exceed viewport width */
    height: auto;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--accent);
    margin: 0.5rem 0;
  }

  .nav-cards {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .nav-card {
    background: var(--background-body);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    text-decoration: none;
    position: relative;
    transition: transform 0.2s;
  }

  .nav-card:hover {
    transform: translateY(-4px);
  }

  .nav-card h2 {
    color: var(--accent);
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
  }

  .nav-card p {
    color: var(--text);
    margin: 0;
    line-height: 1.5;
  }

  .card-arrow {
    float: right;
    font-size: 1.5rem;
    color: var(--accent);
  }

  .blog-preview {
    margin-top: 3rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .post-card {
    background: var(--background-body);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .post-card h3 {
    margin: 0;
    color: var(--accent);
  }

  .post-card p {
    margin: 1rem 0;
    color: var(--text);
  }

  .read-more {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
  }

  .read-more:hover {
    color: var(--accent);
  }
</style>
