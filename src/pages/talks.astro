<style>
  .talks-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .talks-list ul {
    list-style: none;
    padding: 0;
  }

  .talks-list li {
    margin-bottom: 3rem;
    background: var(--gray-800);
    border-radius: 0.5rem;
  }

  h2 {
    margin: 0;
    font-size: 1.4rem;
    color: var(--gray-100);
  }

  .event-info {
    margin: 0.5rem 0 1rem;
    color: var(--gray-400);
  }

  .event-info a {
    color: var(--accent);
    text-decoration: none;
  }

  .event-info a:hover {
    text-decoration: underline;
  }

  .links {
    margin: 1rem 0 1.5rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--accent);
    color: white;
    text-decoration: none;
    border-radius: 0.25rem;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .button:hover {
    opacity: 0.8;
  }
</style>
